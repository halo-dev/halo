{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "packages/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noStrictGenericChecks": true,
    "types": ["unplugin-icons/types/vue"]
  }
}
